    <script src="https://cdn.jsdelivr.net/npm/jquery.scrollto@2.1.3/jquery.scrollTo.min.js"></script>

    <script>

    jQuery(function($) {
        $('#l3').click(function() {
            $.scrollTo("#SPM", 800, { easing: "swing" });
        });

        $('.srcoolup').click(function() {
            $.scrollTo("body", 1000, { easing: "swing" });
        });
    });

    $(window).scroll(function()
    {
        if($(this).scrollTop()>300) $('.srcoolup') .fadeIn();
        else $('.srcoolup') .fadeOut();
    }
    );


    </script>

